/* ===== ОСНОВНЫЕ СТИЛИ ===== */
QMainWindow, QWidget, QDialog {
    background-color: #1e1e2e;
    color: #cdd6f4;
    font-family: 'Segoe UI', 'Roboto', sans-serif;
    font-size: 13px;
    border: none;
}

/* ===== ЗАГОЛОВКИ И ТЕКСТ ===== */
QLabel {
    color: #bac2de;
    font-weight: 500;
    padding: 3px;
    background: transparent;
}

QGroupBox {
    font-weight: 600;
    font-size: 13px;
    border: 2px solid #313244;
    border-radius: 10px;
    margin-top: 12px;
    padding-top: 18px;
    background-color: #181825;
    color: #a6adc8;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 0 12px;
    background-color: #181825;
    color: #74c7ec;
}

/* ===== КНОПКИ ===== */
QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                              stop: 0 #89b4fa, stop: 0.5 #74c7ec, stop: 1 #89b4fa);
    border: 2px solid #1e66f5;
    border-radius: 8px;
    color: #1e1e2e;
    padding: 10px 20px;
    font-weight: 600;
    font-size: 12px;
    margin: 3px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                              stop: 0 #a6e3a1, stop: 0.5 #94e2d5, stop: 1 #a6e3a1);
    border: 2px solid #a6e3a1;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(166, 227, 161, 0.3);
}

QPushButton:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                              stop: 0 #74c7ec, stop: 1 #89b4fa);
    padding: 11px 19px 9px 21px;
    transform: translateY(0px);
}

QPushButton:disabled {
    background: #45475a;
    border: 2px solid #6c7086;
    color: #6c7086;
}

/* Специальные стили для кнопок действий */
QPushButton[text*="Добавить"] {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                              stop: 0 #a6e3a1, stop: 0.5 #94e2d5, stop: 1 #a6e3a1);
    border: 2px solid #a6e3a1;
    color: #1e1e2e;
}

QPushButton[text*="Добавить"]:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                              stop: 0 #cba6f7, stop: 0.5 #f5c2e7, stop: 1 #cba6f7);
    border: 2px solid #cba6f7;
}

QPushButton[text*="Удалить"] {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                              stop: 0 #f38ba8, stop: 0.5 #fab387, stop: 1 #f38ba8);
    border: 2px solid #f38ba8;
    color: #1e1e2e;
}

QPushButton[text*="Удалить"]:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                              stop: 0 #f5c2e7, stop: 0.5 #cba6f7, stop: 1 #f5c2e7);
    border: 2px solid #f5c2e7;
}

QPushButton[text*="Подключиться"] {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                              stop: 0 #a6e3a1, stop: 0.5 #94e2d5, stop: 1 #a6e3a1);
    border: 2px solid #a6e3a1;
    font-weight: 700;
}

QPushButton[text*="Отключиться"] {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                              stop: 0 #f38ba8, stop: 0.5 #fab387, stop: 1 #f38ba8);
    border: 2px solid #f38ba8;
    font-weight: 700;
}

/* ===== ПОЛЯ ВВОДА ===== */
QLineEdit, QSpinBox, QDateEdit, QTimeEdit, QComboBox, QTextEdit {
    background-color: #11111b;
    border: 2px solid #45475a;
    border-radius: 8px;
    padding: 8px 12px;
    color: #cdd6f4;
    font-size: 13px;
    selection-background-color: #89b4fa;
    selection-color: #1e1e2e;
    transition: all 0.3s ease;
}

QLineEdit:focus, QSpinBox:focus, QDateEdit:focus,
QTimeEdit:focus, QComboBox:focus, QTextEdit:focus {
    border: 2px solid #89b4fa;
    background-color: #11111b;
    box-shadow: 0 0 0 3px rgba(137, 180, 250, 0.1);
}

QComboBox {
    padding-right: 30px;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 25px;
    border-left: 2px solid #45475a;
    border-top-right-radius: 6px;
    border-bottom-right-radius: 6px;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                              stop: 0 #313244, stop: 1 #1e1e2e);
}

