/* ===== ЧЕКБОКСЫ ===== */
QCheckBox {
    spacing: 10px;
    color: #bac2de;
    font-weight: 500;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #45475a;
    border-radius: 4px;
    background-color: #11111b;
    transition: all 0.2s ease;
}

QCheckBox::indicator:hover {
    border: 2px solid #89b4fa;
    background-color: #181825;
}

QCheckBox::indicator:checked {
    background-color: #a6e3a1;
    border: 2px solid #a6e3a1;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iMTIiIHZpZXdCb3g9IjAgMCAxMiAxMiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTEwIDNMNC41IDguNUwyIDYiIHN0cm9rZT0iIzFlMWUyZSIgc3Ryb2tlLXdpZHRoPSIyIiBzdHJva2UtbGluZWNhcD0icm91bmQiIHN0cm9rZS1saW5lam9pbj0icm91bmQiLz4KPC9zdmc+);
}

/* ===== ТАБЛИЦЫ ===== */
QTableView {
    background-color: #11111b;
    border: 2px solid #313244;
    border-radius: 8px;
    gridline-color: #313244;
    selection-background-color: #89b4fa;
    selection-color: #1e1e2e;
    alternate-background-color: #181825;
    font-size: 12px;
}

QTableView::item {
    padding: 10px;
    border-bottom: 1px solid #313244;
    transition: background-color 0.2s ease;
}

QTableView::item:hover {
    background-color: #313244;
}

QTableView::item:selected {
    background-color: #89b4fa;
    color: #1e1e2e;
    font-weight: 600;
}

QHeaderView::section {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                              stop: 0 #313244, stop: 1 #1e1e2e);
    color: #74c7ec;
    padding: 12px;
    border: 1px solid #45475a;
    font-weight: 600;
    font-size: 12px;
}

QHeaderView::section:checked {
    background: #89b4fa;
    color: #1e1e2e;
}

/* ===== ВКЛАДКИ ===== */
QTabWidget::pane {
    border: 2px solid #313244;
    border-radius: 10px;
    background-color: #181825;
    margin: -1px;
}

QTabWidget::tab-bar {
    alignment: center;
}

QTabBar::tab {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                              stop: 0 #313244, stop: 1 #1e1e2e);
    color: #a6adc8;
    padding: 12px 24px;
    margin: 2px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    border: 2px solid #313244;
    border-bottom: none;
    transition: all 0.3s ease;
    font-weight: 500;
}

QTabBar::tab:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                              stop: 0 #45475a, stop: 1 #313244);
    color: #cdd6f4;
}

QTabBar::tab:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                              stop: 0 #89b4fa, stop: 1 #74c7ec);
    color: #1e1e2e;
    border-color: #89b4fa;
    margin-bottom: -1px;
    font-weight: 600;
}

QTabBar::tab:!selected {
    margin-top: 4px;
}

/* ===== SCROLLBARS ===== */
QScrollBar:vertical {
    border: none;
    background-color: #181825;
    width: 14px;
    margin: 2px;
    border-radius: 7px;
}

QScrollBar::handle:vertical {
    background-color: #45475a;
    border-radius: 7px;
    min-height: 30px;
    margin: 2px;
    transition: background-color 0.2s ease;
}

QScrollBar::handle:vertical:hover {
    background-color: #89b4fa;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    border: none;
    background-color: #181825;
    height: 14px;
    margin: 2px;
    border-radius: 7px;
}

QScrollBar::handle:horizontal {
    background-color: #45475a;
    border-radius: 7px;
    min-width: 30px;
    margin: 2px;
    transition: background-color 0.2s ease;
}

QScrollBar::handle:horizontal:hover {
    background-color: #89b4fa;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* ===== ФОРМЫ ===== */
QFormLayout {
    spacing: 10px;
    margin: 12px;
}

/* ===== АНИМАЦИИ ===== */
QPushButton, QLineEdit, QComboBox, QSpinBox, QDateEdit, QTimeEdit, QCheckBox {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Эффект пульсации для кнопок */
@keyframes pulse {
    0% { transform: scale(1); box-shadow: 0 0 0 0 rgba(137, 180, 250, 0.7); }
    70% { transform: scale(1.05); box-shadow: 0 0 0 10px rgba(137, 180, 250, 0); }
    100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(137, 180, 250, 0); }
}

QPushButton:focus {
    animation: pulse 1.5s infinite;
}

/* Эффект появления для новых элементов */
QTableView::item {
    transition: all 0.3s ease;
}

/* Стиль для лога */
QTextEdit {
    background-color: #11111b;
    border: 2px solid #313244;
    border-radius: 8px;
    font-family: 'Fira Code', 'Consolas', 'Monaco', monospace;
    font-size: 11px;
    color: #a6adc8;
    padding: 10px;
}

QTextEdit:focus {
    border: 2px solid #89b4fa;
}

/* Стиль для статусных сообщений */
QLabel[status="success"] {
    color: #a6e3a1;
    font-weight: 600;
    background-color: rgba(166, 227, 161, 0.1);
    padding: 8px;
    border-radius: 6px;
    border: 1px solid #a6e3a1;
}

QLabel[status="error"] {
    color: #f38ba8;
    font-weight: 600;
    background-color: rgba(243, 139, 168, 0.1);
    padding: 8px;
    border-radius: 6px;
    border: 1px solid #f38ba8;
}

QLabel[status="warning"] {
    color: #fab387;
    font-weight: 600;
    background-color: rgba(250, 179, 135, 0.1);
    padding: 8px;
    border-radius: 6px;
    border: 1px solid #fab387;
}

/* Стиль для сообщений */
QMessageBox {
    background-color: #1e1e2e;
    color: #cdd6f4;
}

QMessageBox QLabel {
    color: #cdd6f4;
    font-size: 13px;
}

QMessageBox QPushButton {
    min-width: 80px;
}